<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="CENTER" prefHeight="600" prefWidth="600" spacing="20" style="-fx-background-color: #E0F7FA;" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="application.Player2PlacementController">
    
    <Label style="-fx-font-size: 24; -fx-font-weight: bold;" text="Player 2: Place your ships" />
    
    <StackPane maxHeight="360" maxWidth="360" prefHeight="360" prefWidth="360">
        <GridPane fx:id="playerGrid" gridLinesVisible="true" prefHeight="360" prefWidth="360" />
    </StackPane>

    <HBox alignment="CENTER" spacing="15">
        <Button fx:id="rotateBtn" text="Rotate" />
        <Button fx:id="randomBtn" text="Place Randomly" />
        <Button fx:id="doneBtn" disable="true" text="Done" />
    </HBox>

    <ComboBox fx:id="shipCombo" prefWidth="180" />
    <Label fx:id="orientationLabel" text="Orientation: Horizontal">
      <font>
         <Font name="System Bold" size="12.0" />
      </font></Label>
    <Label fx:id="tipLabel" alignment="CENTER" maxWidth="400" text="Place your ships by clicking grid cells." wrapText="true">
      <font>
         <Font name="System Bold" size="12.0" />
      </font></Label>

</VBox>
